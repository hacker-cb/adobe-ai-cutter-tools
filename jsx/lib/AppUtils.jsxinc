/**
 * Get PDF preset by name
 *
 * @param name Preset name
 * @returns {string}
 */
AppUtils.getPDFPresetByName = function(name) {
    for (var i=0; i < app.PDFPresetsList.length; i++) {
        if (app.PDFPresetsList[i] == name) {
            return app.PDFPresetsList[i];
        }
    }
    throw "Preset not found: " + name;
};

